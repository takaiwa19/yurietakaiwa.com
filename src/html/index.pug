extends ./_layout/_page.pug

block vars
  -
    var page = pages.index;
    var gnav_current = ['is-current', '', '', ''];
    var category = 'home';

block content
  .l-cont-body.l-cont-body__index 
    form.c-searchform
      input.c-searchform-text(type="text")
      label
        input.c-searchform-submit(type="submit")
        svg.c-searchform-icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 30px; height: 30px;")
          path.c-searchform-fill(d="M495.272,423.558c0,0-68.542-59.952-84.937-76.328c-24.063-23.938-33.69-35.466-25.195-54.931c37.155-75.78,24.303-169.854-38.72-232.858c-79.235-79.254-207.739-79.254-286.984,0c-79.245,79.264-79.245,207.729,0,287.003c62.985,62.985,157.088,75.837,232.839,38.691c19.466-8.485,31.022,1.142,54.951,25.215c16.384,16.385,76.308,84.937,76.308,84.937c31.089,31.071,55.009,11.95,69.368-2.39C507.232,478.547,526.362,454.638,495.272,423.558zM286.017,286.012c-45.9,45.871-120.288,45.871-166.169,0c-45.88-45.871-45.88-120.278,0-166.149c45.881-45.871,120.269-45.871,166.169,0C331.898,165.734,331.898,240.141,286.017,286.012z")
    p.c-listpanels__main-title study
    .c-listpanels.u-row
      - for (var i = 0; i < 6; i++) {
          if ( i == 0 || i%3 == 0 )
            a(href="/single.html").c-listpanels__box.u-column
              .c-listpanels-thum
                img(src="/img/test/image1.jpg") 
              span.c-listpanels__category JavaScript
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
                  
          else if ( i == 1 || i%3 == 1)
            a(href="/single.html").c-listpanels__box.c-listpanels__box--base-color.u-column
              .c-listpanels-thum
                img(src="/img/test/image2.jpeg") 
              span.c-listpanels__category CSS
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
          else 
            a(href="/single.html").c-listpanels__box.c-listpanels__box--accent-color.u-column
              .c-listpanels-thum
                img(src="/img/test/image1.jpg") 
              .c-listpanels__category HTML
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
      - }

    p.c-listpanels__main-title others
    .c-listpanels.u-row
      - for (var i = 0; i < 5; i++) {
          if ( i == 0 || i%3 == 0 )
            a(href="/single.html").c-listpanels__box.u-column
              .c-listpanels-thum
                img(src="/img/test/image1.jpg") 
              .c-listpanels__category food
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
                  
          else if ( i == 1 || i%3 == 1)
            a(href="/single.html").c-listpanels__box.c-listpanels__box--base-color.u-column
              .c-listpanels-thum
                img(src="/img/test/image2.jpeg") 
              .c-listpanels__category music
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
          else 
            a(href="/single.html").c-listpanels__box.c-listpanels__box--accent-color.u-column
              .c-listpanels-thum
                img(src="/img/test/image1.jpg") 
              .c-listpanels__category movie
              h2.c-listpanels__title 
                |#{i+1 + '.'}#{listpanels[i].title}
              p.c-listpanels__date #{listpanels[i].date}
      - }
